{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "moony",
  "version": "0.1.0",
  "identifier": "dev.agrypie.moony.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
		"macOSPrivateApi": true,
    "windows": [
      {
				"decorations": false,
				"resizable": false,
				"decorations": false,
				"center": true,
				"visible": false,
        "title": "Moony ðŸŒ•",
        "width": 600,
        "height": 200
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
	"plugins": {
		"sql": {
			"preload": ["sqlite:moony_launcher.db"]
		}
	}
}
